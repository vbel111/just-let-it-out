rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anonymous users to upload and read files (general)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for Rate Me photos
    match /rate-me-photos/{photoId} {
      // Allow authenticated users to upload their own photos
      allow create: if request.auth != null 
                    && photoId.matches('.*' + request.auth.uid + '.*');
      
      // Allow anyone to read photos (for rating view)
      allow read: if true;
      
      // Allow users to delete their own photos
      allow delete: if request.auth != null 
                    && photoId.matches('.*' + request.auth.uid + '.*');
      
      // Allow users to update metadata of their own photos
      allow update: if request.auth != null 
                    && photoId.matches('.*' + request.auth.uid + '.*');
    }
  }
}
