rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only allow authenticated users to upload files, allow public read if needed
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Specific rules for Rate Me photos
    match /rate-me-photos/{photoId} {
      // Allow authenticated users to upload their own photos
      allow create: if request.auth != null && photoId.matches('.*' + request.auth.uid + '.*');
      // Allow anyone to read photos (for rating view)
      allow read: if true;
      // Allow users to delete or update their own photos
      allow delete, update: if request.auth != null && photoId.matches('.*' + request.auth.uid + '.*');
    }
  }
}
