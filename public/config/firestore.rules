rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anonymous users to read and write posts
    match /posts/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow anonymous users to read and write chat rooms
    match /chatRooms/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow anonymous users to manage pairing queue
    match /pairingQueue/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow anonymous users to manage chat sessions
    match /chatSessions/{sessionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
      
      // Allow reading and writing messages within chat sessions
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Stories collection
    match /stories/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Story comments
    match /stories/{storyId}/comments/{commentId} {
      allow read, write: if request.auth != null;
    }
    
    // Story reactions
    match /stories/{storyId}/reactions/{reactionId} {
      allow read, write: if request.auth != null;
    }
    
    // Bookmarks
    match /bookmarks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Questions collection (Q&A feature)
    match /questions/{document} {
      allow read, write: if request.auth != null;
    }
    
    // User likes (for tracking which stories users liked)
    match /userLikes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User reactions (for tracking which reactions users made)
    match /userReactions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User bookmarks (for tracking bookmarked stories)
    match /userBookmarks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Community posts
    match /community/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Support messages
    match /supportMessages/{document} {
      allow create: if request.auth != null;
      allow read: if false; // Only for admin access
    }
    
    // Reports (for user reporting)
    match /reports/{document} {
      allow create: if request.auth != null;
      allow read: if false; // Only for admin access
    }
    
    // Allow access to all subcollections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
